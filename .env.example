# Bravo revOS - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================
# Supabase Configuration
# ===========================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (for server-side operations)
# DO NOT expose this in client-side code!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================
# Unipile Configuration
# ===========================
# Unipile API for LinkedIn automation
UNIPILE_DSN=https://api3.unipile.com:13344
UNIPILE_API_KEY=your_unipile_api_key_here

# Set to 'true' for development, 'false' for production
UNIPILE_MOCK_MODE=true

# ===========================
# Security & Encryption
# ===========================
# 32-byte hex string for AES-256 encryption
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Cron Job Security (E-02 Feature)
# Generate with: openssl rand -hex 32
# Used by /api/cron/session-monitor endpoint
CRON_SECRET=your-secure-random-string-here

# ===========================
# Email Notifications (Optional)
# ===========================
# Resend API for email delivery
# Get your key at: https://resend.com/api-keys
# If not set, emails will be logged but not sent
RESEND_API_KEY=re_xxxxxxxxxxxx

# ===========================
# OpenAI Configuration
# ===========================
# For voice generation and AI features
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================
# App Configuration
# ===========================
# Base URL for the application
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================
# Redis / BullMQ Configuration
# ===========================
# Local development: redis://localhost:6379
# Production: Use Upstash Redis (rediss://...upstash.io:6379)
REDIS_URL=redis://localhost:6379

# ===========================
# Feature Flags (Optional)
# ===========================
# ENABLE_EMAIL_NOTIFICATIONS=true
# ENABLE_SESSION_MONITORING=true
# ENABLE_WEBHOOK_DELIVERY=true

# Sandbox Mode (Development/Testing)
# Intercepts API calls for safe testing without side effects
NEXT_PUBLIC_SANDBOX_MODE=false
